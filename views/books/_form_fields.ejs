<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= book.title %>">
    </div>
    <div class="form-item">
        <label>Author</label>
        <select name="author">
            <% authors.forEach(author => { %>
                <% if (author.id == book.author) { %>
                    <option
                        selected
                        label="<%= author.name %>"
                        value="<%= author.id %>"
                    >
                <% } else { %>
                    <option label="<%= author.name %>" value="<%= author.id %>">
                <% } %>
            <% }); %>
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label for="publishDate">Publish Date</label>
        <input
            type="date"
            id="publishDate"
            name="publishDate"
            value="<%=
                book.publishDate ?
                    book.publishDate.toISOString().split('T')[0] :
                    ''
            %>"
        >
    </div>
    <div class="form-item">
        <label for="pageCount">Page Count</label>
        <input
            min="1"
            type="number"
            id="pageCount"
            name="pageCount"
            value="<%= book.pageCount %>"
        >
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover">Cover</label>
        <input type="file" id="cover" name="cover" class="book-cover filepond">
    </div>
    <div class="form-item">
        <label for="description">Description</label>
        <textarea
            rows="4"
            id="description"
            name="description"
            style="resize: none"
        ><%= book.description %></textarea>
    </div>
</div>
